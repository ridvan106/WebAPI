<center ng-controller="listCtrl">
    <table style="width:500px;" class="table table-hover" ng-model="table">


        <tr style="border-bottom:1px solid gray; padding:10px;">

            <th style="padding:15px;text-align:center;">Country</th>
            <th style="padding:15px;text-align:center;">Population</th>
            <th style="padding:15px;text-align:center;">Details</th>
            <th style="padding:15px;text-align:center;">Delete</th>
            <th style="padding:15px;text-align:center;">Update</th>
        </tr>
        <tr ng-repeat="x in list" style="padding: 15px;">
            <td style="padding: 10px;">{{x.name}}</td>
            <td style="padding: 10px;">{{x.population}}</td>
            <td>

                <button type="button" class="btn btn-primary"> <span class="glyphicon glyphicon-edit"></span></button>

            </td>
            <td>
                <button type="button" id="delete" class="btn btn-danger" ng-click="delete(x.id,$index)"> <span class="glyphicon glyphicon-remove"></span></button>

            </td>
            <td>
                <a href="#!edit/{{x.id}}" class="btn btn-warning" id="edit"> <!--ng-click="guncelle($index)"-->  <span class="glyphicon glyphicon-pencil"></span></a>

            </td>
        </tr>
      
        
        <tr style="border-top:solid 1px gray;padding:10px;">
            <td colspan="5" style="padding:10px;">
                <a href="#!insert" id="add" class="btn btn-danger btn-lg" style="width:100%;height:40px;">
                <span style="vertical-align:middle;" class="glyphicon glyphicon-plus"></span>
                </a>
            </td>
        </tr>

    </table>
    

</center>